env:
    browser: true
    es6: true
    jquery: true
extends: airbnb
parser: babel-eslint
parserOptions:
    ecmaVersion: 6
    ecmaFeatures:
        jsx: true
        experimentalObjectRestSpread: true
    sourceType: module
rules:
    indent:
    - error
    - 4
    linebreak-style:
    - error
    - unix
    global-require: 0
    quotes:
    - error
    - single
    semi:
    - error
    - never
    no-underscore-dangle: 0
    no-undef:
        - 2
        - typeof: true
    max-len:
        - 2
        - 110
    new-cap: 0
    no-param-reassign: 0
    one-var: 0
    comma-dangle: 0
    no-cond-assign: 0
    no-nested-ternary: 0
    spaced-comment: 0
    guard-for-in: 0
    camelcase: 0
    func-names: 0
    no-use-before-define: 0
    no-constant-condition: 0
    no-shadow: 0
    padded-blocks: 0
    complexity:
        - warn
        - max: 12
    no-console:
        - error
        - allow:
            - warn
            - error
            - info
    space-return-throw-case: 0
    space-before-keywords: 0
    space-after-keywords: 0
    no-empty-label: 0
    no-restricted-syntax: 0
    no-labels:
    - error
    keyword-spacing:
    - error
    - before: true
      after: true
    jsx-quotes:
    - 2
    - prefer-single
    arrow-body-style: 0
    react/forbid-prop-types: 0
    react/jsx-indent-props:
    - 2
    - 4
    react/no-danger: 0
    react/jsx-indent:
    - 2
    - 4
    import/extensions: 0
    import/no-dynamic-require: 0
    react/prop-types: 2
    react/sort-prop-types: 2
    jsx-a11y/anchor-has-content: 0
settings:
    import/resolver:
        node:
            moduleDirectory:
                - node_modules
                - client/js/app/
                - client/js/app/components/Pages/Start
                - client/js/app/components/Pages/Final
                - client/js/app/components/Pages/Share
